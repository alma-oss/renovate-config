{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "major prod dependencies",
      "groupSlug": "major-prod",
      "matchManagers": ["{{arg0}}"],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "dependencies"
      ]
    }
  ]
}
